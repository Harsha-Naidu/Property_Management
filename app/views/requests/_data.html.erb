<div class="container">

<div style="float:right">
  <%= form_tag requests_path, :method => 'get' do %>
    <%= text_field_tag :search,params[:search] %>
    <%= submit_tag "Search", class:"btn btn-light" %>
  <% end %>  
</div>

<br/><br/>
    <table class="table" id="dataTable" cellspacing="0" width="100%">
    <thead class="thead-light">
      <tr>
        <th>Suite No</th>
        <th>Name</th>
        <th>Request Type</th>
        <th>Request Date</th>
        <th>Status</th>   
        <th></th>
      </tr>
    </thead>
    <% @requests.each do |request|%>  
        <tbody>
        <tr>
            <td><%= request.suit_no %></td>
            <td><%= request.name %></td>
            <td><%= request.request_type %></td>
            <td><%= request.created_at.to_date %></td>
            <td><%= request.request_status %></td>
            
            <td> 
            <% if can? :crud, request %>
                <%= link_to edit_request_path(request.id) do %>  
                    <button class="btn btn-primary">Open</button> 
                <% end %> 
             <% end %>          
            </td>   
        </tr>
        </tbody>
    <% end %>
  </table>
</div>