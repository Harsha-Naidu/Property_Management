<div class="container request">
    <div class="requestform">
        <%= form_with model:@request, local: true do |f| %>

            <h3>Request Application</h3>
            <hr>
            <% if @request.errors.present? %>
                <%= @request.errors.full_messages.join(', ')%>
            <% end %>

            <div class="form-group">
                <%= f.text_field,placeholder:"Suit No" %>
            </div>

            <div class="form-group">
                <strong><%= f.label :image_url %></strong>
                <br>
                <%= f.text_field :image_url, class:"form-control" %>
            </div>


            <div class="form-group">
                <strong><%= f.label :description %></strong>
                <br>
                <%= f.text_area :description, cols:30 ,rows:4,class:"form-control" %>
            </div>

            <%= f.submit class:"btn btn-info"  %>
        
        <% end %>
    </div>
</div>